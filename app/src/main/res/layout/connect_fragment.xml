<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/connect_frag_port"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:hint="Port"
        android:textSize="18sp"
        android:layout_below="@+id/connect_title"
        android:layout_alignLeft="@+id/connect_title"
        android:layout_alignStart="@+id/connect_title"
        android:layout_alignRight="@+id/connect_btn_confirm"
        android:layout_alignEnd="@+id/connect_btn_confirm" />

    <Button
        android:id="@+id/connect_btn_cancel"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="CANCEL"
        android:layout_below="@+id/connect_frag_port"
        android:layout_toLeftOf="@+id/connect_btn_confirm"
        android:layout_toStartOf="@+id/connect_btn_confirm" />

    <Button
        android:id="@+id/connect_btn_confirm"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/connect_btn_cancel"
        android:text="CONFIRM" />

    <TextView
        android:id="@+id/connect_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:textStyle="bold"
        android:layout_marginStart="26dp"
        android:text="Connect to server"
        android:textColor="@color/md_black_1000"
        android:textSize="22sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>